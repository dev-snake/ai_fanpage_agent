{
    "page_id": "${PAGE_ID}",
    "cookie_path": "cookies.json",
    "interval_seconds": 90,
    "max_actions_per_cycle": 20,
    "demo": false,
    "llm_provider": "openai",
    "openai_api_key": "${OPENAI_API_KEY}",
    "openai_model": "gpt-4o-mini",
    "database_path": "db/agent.db",
    "timezone": "Asia/Ho_Chi_Minh",
    "log_level": "INFO",
    "graph_access_token": "${GRAPH_ACCESS_TOKEN}",
    "graph_version": "v24.0",
    "headless": false,
    "_comment_1": "=== TOKEN AUTO-REFRESH CONFIG (Optional) ===",
    "_comment_2": "Thêm app_id và app_secret để tự động refresh token khi hết hạn",
    "facebook_app_id": "${FACEBOOK_APP_ID}",
    "facebook_app_secret": "${FACEBOOK_APP_SECRET}",
    "_comment_3": "Nếu không có app credentials, hệ thống sẽ yêu cầu nhập token thủ công qua browser"
}
